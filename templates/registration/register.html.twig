{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="d-flex justify-content-center mt-5">
        <h2 class="border-light bg-info text-light btn mt-5">Crée un profil</h2>
    </div>
    <p class="small d-flex justify-content-center"><strong>Confronte toi aux autres joueurs</strong></p>
    <div class=" form-register row justify-content-center align-content-center">
        <div id="concept" class="home-section container bg-transparent col-11 rounded mb-5 pt-3 p-1 shadow mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-10 col-sm-10 ">
                    <a class="btn-info btn d-flex justify-content-end" href="{{ path('home') }}">Retour à l'accueil</a>
                    {% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.pseudo) }}
                    {{ form_row(registrationForm.agreeTerms) }}
                    <button type="submit" class="btn btn-info">Créer</button>
                    {{ form_end(registrationForm, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>



{% endblock %}
