{% extends 'base.html.twig' %}

{% block title %}BLINDTEST{% endblock %}

{% block body %}

    {% if app.user %}
<div class="d-flex justify-content-center">
    {{ include('component/_progress.html.twig') }}
</div>
    {% endif %}
    {{ include('component/_classement.html.twig') }}

    <div class="d-flex justify-content-center mt-5">

    <div class=" mt-5 ">
        <form action="{{ path('titre_guess') }}" method="POST">

            {% for chanson in chansonsToGuess[0].chansons %}


                <a class="list-group ">

                    <div class="dropdown card  justify-content-center" style="width: 400px;" >

                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <a href="" class="list-group-item  w-100">
                                <h5 class="mb-1">Chanson myst√®re <span class="badge badge-info badge-pill">{{ loop.index }}</span></h5>
                            </a>
                        </button>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">

                            <button class="dropdown-item" type="button">


                                    <div class="d-flex justify-content-center embed-responsive-21by9 mt-1">
                                        <iframe class="embed-responsive-item"
                                                src="https://www.youtube.com/embed/{{ chanson.youtubeId[32:] }}">
                                        </iframe>
                                    </div>

                            </button>

                        </div>

                            <label for="titre"><strong>Titre : </strong></label>
                            <input type="text" id="titre" name="title[{{ chanson.id }}]]"/>

                    </div>
                </a>

            {% endfor %}
            {% if app.user %}
            <button class="btn btn-info mt-1">Valider</button>
            {% endif %}
        </form>

    </div>
</div>

{% endblock %}
